@model ClinicManagementSystemMVC.Models.DocDetails

@{
    ViewData["Title"] = "Create";
}
<link href="~/dist/timepicker.min.css" rel="stylesheet" />
<script src="~/dist/timepicker.min.js"></script>

<h1>
    Creating Doctor's Profile <button class="btn btn-danger float-right" data-toggle="modal" data-target=".menudiv">Menu</button>

    <div class="modal bs-example-modal-sm menudiv" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header"><h6>Menu <i class="fa fa-lock"></i></h6></div>
                <div class="modal-body"><i class="fa fa-question-circle"></i><h6> Are you sure you want to go to Home Page?</h6></div>
                <div class="modal-footer"><a href="~/UserLogins/Success" class="btn btn-danger btn-block">Menu</a></div>
            </div>
        </div>
    </div>
</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Sex</label><br />
                @Html.RadioButtonFor(model => model.Sex, "Male")
                Male<br />
                @Html.RadioButtonFor(model => model.Sex, "Female")
                Female<br />
                @Html.RadioButtonFor(model => model.Sex, "Others")
                Others<br /><br />
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Specialization</label>
                <select class="form-control" id="Specialization" name="Specialization">
                    <option> General</option>
                    <option>Gynaecologist</option>
                    <option>Pediatrics</option>
                    <option>Orthopedics</option>
                    <option>Ophthalmology</option>
                </select>
            </div>
            <div class="form-group">
                @*<label asp-for="FromTime" class="control-label"></label>
         <input asp-for="FromTime" class="form-control" />
        <span asp-validation-for="FromTime" class="text-danger"></span>*@
